<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="اسم الضامن: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceHelperNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اسامه فريج"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="اسم العميل: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceNamesOfClientTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مايكل اسامه"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="رقم الضامن: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceHelperNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01220795721"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="نوع الموبايل: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceTypeOfDeviceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="huawei y7 prime 2019"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="تاريخ الشراء: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceDateOfBuyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/5/2020"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="سعر الموبايل: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceMobilePriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2200"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="المقدم: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceFirstBatchTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="القسط: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/devicePremiumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="شهور القسط: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deviceMonthOfLengthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="يوم الدفع: "
                android:textColor="#0277bd"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/devicePayOfDayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deviceDeleteBTN"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="    مسح    " />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>